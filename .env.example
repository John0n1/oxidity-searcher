#/// Private key for transaction signing.
WALLET_KEY=replace_me
#/// Use a dedicated bundle signer key (falls back to WALLET_KEY if omitted).
BUNDLE_SIGNER_KEY=replace_me
#/////////////////////////////////////////////////////
#/// Must match the address derived from WALLET_KEY.
